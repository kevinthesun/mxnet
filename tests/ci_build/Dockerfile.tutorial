# For tutorial testing
FROM mxnet/ubuntu:latest

RUN apt-get update
RUN apt-get -y install git
RUN apt-get -y install python-opencv
RUN apt-get -y install ipython ipython-notebook
RUN apt-get -y install graphviz
RUN apt-get -y install docker.io
RUN ln -sf /usr/bin/docker.io /usr/local/bin/docker
RUN sed -i '$acomplete -F _docker docker' /etc/bash_completion.d/docker.io
RUN python -m pip install -U pip

RUN pip install virtualenv
RUN virtualenv ENV
Run source /ENV/bin/activate

RUN pip install --upgrade setuptools
RUN pip install requests
RUN pip install jupyter
RUN pip install graphviz
RUN pip install matplotlib